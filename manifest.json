{
    "name": "TabsPlus",
    "version": "0.1",
    "description": "Additional features to enhance chrome tabs and windows",
    "manifest_version": 3,
    "authors": [
        "Sriram Yadavalli",
        "Nima Emamian",
        "Ruben Rivera",
        "Nicolas Hernandez",
        "Alexander Hong",
        "Matthew Reed"
    ],
    "icons": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
    "action": {
        "default_popup": "index.html",
        "default_title": "TabsPlus"
    },
    "permissions": [
        "tabs",
        "tabGroups",
        "bookmarks",
        "scripting",
        "search",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>",
        "*://*/*"
    ],
    "optional_permissions": [
        "<all_urls>",
        "*://*/*"
    ],
    "optional_host_permissions": [
        "<all_urls>",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "*://*/*"
            ],
            "js": [
                "js/frontend.js", 
                "js/utils.js",
                "js/close-duplicate-tabs.js", 
                "js/create-bookmarks-folder-from-window.js", 
                "js/create-bookmarks-from-groups.js",
                "js/rename-tab.js",
                "js/sort-by-domain-name.js",
                "js/search-all-windows.js"
            ]
        }
    ]
}
